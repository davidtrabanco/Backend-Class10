<html>

<%- include('./partials/head.ejs')%>
<%- include('./partials/style.ejs')%>
    <body>
        <h1>EJS</h1>

        <button><a href="../">Ingresar Nuevo Producto</a></button>

        <h2>Lista de Productos</h2>

        <% if(listExists){ %>
            <table style='width:100%; text-align:center; vertical-align:middle'>
                <tr>
                    <th>Id</th>
                    <th>Producto</th>
                    <th>Precio</th>
                    <th>Im√°gen</th>
                </tr>

                <% productsList.forEach(product => { %>
                    <tr>
                        <th><%= product.id %></th>
                        <th><%= product.title %></th>
                        <th><%= product.price %></th>
                        <th><img src="<%= product.thumbnail %>" alt=""></th>
                    </tr>
                <% }); %>

            </table>
        <% } else { %>
            <h2>No hay productos</h2>  
        <% } %>
    </body>


</html>

